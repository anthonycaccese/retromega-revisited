         <systemBackgroundColor>959290</systemBackgroundColor>
         <systemViewNameColor>1D1D1C</systemViewNameColor>
         <systemViewArtworkColor>FFFFFF</systemViewArtworkColor>
         <systemViewArtworkSaturation>1</systemViewArtworkSaturation>
