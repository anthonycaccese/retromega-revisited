         <gamelistBorderColor>888888</gamelistBorderColor>
         <gamelistSelectorColor>bfbdbc</gamelistSelectorColor>
         <gamelistPrimaryColor>1d1d1c66</gamelistPrimaryColor>
         <gamelistSecondaryColor>1d1d1c66</gamelistSecondaryColor>
         <gamelistSelectedColor>000000</gamelistSelectedColor>
      </variables>
   </colorScheme>
</theme>